{
    "schema": "https://json.schemastore.org/package.json",
    "name": "template-react-component-library",
    "description": "template repository for building react component libraries",
    "author": "David Castner",
    "version": "0.0.1",
    "license": "Unlicense",
    "repository": "github:davidjcastner/template-react-component-library",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "scripts": {
        "build": "npx webpack --config ./webpack.config.ts --mode=production",
        "lint": "npx eslint ./src/**/*.{js,jsx,ts,tsx}",
        "pub": "npm publish --scope=@davidjcastner --dry-run",
        "start": "npx webpack serve --config ./webpack.dev.ts --mode=development --history-api-fallback",
        "test": "npx jest"
    },
    "dependencies": {
        "@types/react": "^17.0.3",
        "react": "^17.0.2"
    },
    "devDependencies": {
        "@testing-library/react": "^11.2.6",
        "@types/html-webpack-plugin": "^3.2.5",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.37",
        "@types/react-dom": "^17.0.3",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "css-loader": "^5.2.0",
        "eslint": "^7.23.0",
        "eslint-plugin-react": "^7.23.1",
        "html-webpack-plugin": "^5.3.1",
        "jest": "^26.6.3",
        "react-dom": "^17.0.2",
        "style-loader": "^2.0.0",
        "ts-jest": "^26.5.4",
        "ts-loader": "^8.1.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3",
        "webpack": "^5.30.0",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^3.11.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "jsdom"
    }
}